<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/botao"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtOrdem"
            android:layout_width="190dp"
            android:layout_height="29dp"
            android:text="Ordem de servico"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/editCliente"
            android:layout_width="187dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:text="Cliente"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtOrdem"
            app:layout_constraintTop_toBottomOf="@+id/txtOrdem" />

        <TextView
            android:id="@+id/editdescricao"
            android:layout_width="317dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:text="Descricao"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/editCliente"
            app:layout_constraintTop_toBottomOf="@+id/editCliente" />



        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:progressTint="#FF9800"
            app:layout_constraintStart_toStartOf="@+id/editdescricao"
            app:layout_constraintTop_toBottomOf="@+id/editdescricao"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editComentario"
            android:layout_width="355dp"
            android:layout_height="49dp"
            android:layout_marginTop="10dp"
            android:background="#F9F2E7"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Digite aqui o seu comentario"
            android:inputType="textMultiLine"
            android:lines="1"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintStart_toStartOf="@+id/ratingbar"
            app:layout_constraintTop_toBottomOf="@+id/ratingbar"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>