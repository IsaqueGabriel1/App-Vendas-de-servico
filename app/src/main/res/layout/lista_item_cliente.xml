<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/botao"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtOrdem"
            android:layout_width="190dp"
            android:layout_height="29dp"
            android:text="Ordem de servico"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/editCliente"
            android:layout_width="187dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:text="Cliente"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtOrdem"
            app:layout_constraintTop_toBottomOf="@+id/txtOrdem" />

        <TextView
            android:id="@+id/editdescricao"
            android:layout_width="160dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:text="Descricao"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/editCliente"
            app:layout_constraintTop_toBottomOf="@+id/editCliente" />

        <TextView
            android:id="@+id/editPorteSys"
            android:layout_width="137dp"
            android:layout_height="28dp"
            android:layout_marginTop="39dp"
            android:text="Porte do sistema"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editCliente"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/editValor"
            android:layout_width="185dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:text="Valor"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/editdescricao"
            app:layout_constraintTop_toBottomOf="@+id/editdescricao" />

        <TextView
            android:id="@+id/editStatus"
            android:layout_width="105dp"
            android:layout_height="21dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:gravity="start"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPorteSys"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>