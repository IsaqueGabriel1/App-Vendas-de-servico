<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroud"
        tools:context=".view.formcadastro.FormCadastro">

        <TextView
            android:id="@+id/btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_voltar_nav"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_cadastroServico"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="50dp"
            />

        <EditText
            android:id="@+id/txtdescricaoServico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição do serviço"
            android:background="@drawable/fundoinput_text"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:inputType="text"
            />


        <EditText
            android:id="@+id/txtporteSistema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Porte do sistema"
            android:background="@drawable/fundoinput_text"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtvalor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor R$"
            android:background="@drawable/fundoinput_text"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:inputType="numberDecimal"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_gravarDB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar serviço"
            android:layout_gravity="center"
            android:background="@drawable/backgroud_buttom"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>